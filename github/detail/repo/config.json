{
  "dockerImageBuilder": "cimg/python:3.8",
  "inputs": [
    {
      "name": "rit_github_user",
      "type": "CREDENTIAL_GITHUB_USERNAME"
    },
    {
      "name": "rit_github_token",
      "type": "CREDENTIAL_GITHUB_TOKEN"
    },
    {
      "label": "Github repository URL to observe",
      "name": "rit_github_repo",
      "type": "text",
      "tutorial":"Example: https://github.com/GuillaumeFalourd/formulas-insights"
    },
    {
      "label": "Do you want contribution details as well?",
      "name": "rit_contribution",
      "type": "text",
      "items": [
        "yes",
        "no"
      ]
    }
  ]
}